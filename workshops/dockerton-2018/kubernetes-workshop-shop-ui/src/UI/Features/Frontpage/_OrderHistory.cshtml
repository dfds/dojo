<section id="order-history" class="section order-history">
    <div class="container">
        <h1 class="title">Order history </h1>

        <div v-if="hasOrders">

            <div class="order box" v-for="order in orders">
                <div class="level">
                    <div class="level-left">
                        <label class="title is-6 level-item">No: {{order.id}}</label>
                    </div>
                    <div class="level-right">
                        <label class="subtitle is-6 level-item">Date: {{order.date}}</label>
                    </div>
                </div>

                <div class="line-items">
                    <table class="table is-fullwidth">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Item</th>
                                <th class="has-text-right">Quantity</th>
                                <th class="has-text-right">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="product" v-for="line in order.lines">
                                <td>
                                    <img class="product-image" v-bind:src="line.imageUrl" />
                                </td>
                                <td>{{line.description}}</td>
                                <td class="has-text-right">{{line.quantity}}</td>
                                <td class="has-text-right">{{line.price}}</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3" class="has-text-right">Total</th>
                                <th class="has-text-right">{{order.total}}</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

            </div>
            
        </div>
        <div v-else>
            <div class="notification is-warning">
                <strong>No orders - yet!</strong> Please buy some stuff!!
            </div>            
        </div>

    </div>
</section>
